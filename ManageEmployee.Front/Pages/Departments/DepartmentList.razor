@page "/departments"
    @using Microsoft.AspNetCore.Components
<PageTitle>Départements</PageTitle>


<h3>Départements</h3>

@if(@Departments == null){
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{



    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Departments)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditDepartment(department.Id)">Edit</button>
                    </td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteDepartment(department.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-success" @onclick="GoToCreateDepartment">Ajouter un département</button>

}
